rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Users Collection ---
    // - Default: Deny all reads and writes.
    // - Create: Allow a user to create their own user document.
    // - Read: Allow a user to read their own document.
    // - Update: Allow a user to update their own document. Admin can update any.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- Bookings Collection ---
    // - Default: Deny all reads and writes.
    // - List: Allow users to list their own bookings.
    // - Read: Allow any authenticated user to read a booking (to check for conflicts).
    // - Create: Allow any authenticated user to create a booking.
    // - Update: Allow the user who owns the booking or an admin to update it.
    match /bookings/{bookingId} {
      allow list: if request.auth.uid != null && request.auth.uid == resource.data.userId;
      allow read: if request.auth != null;
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // --- Academy Registrations Collection ---
    // - List: Allow admins to list all registrations.
    // - Read: Allow a user to read their own registration, or an admin to read any.
    // - Create: Allow any authenticated user to create a registration.
    // - Update: Allow an admin to update any registration.
    match /academyRegistrations/{regId} {
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow create: if request.auth.uid != null;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // --- Find a Team Registrations Collection ---
    // - List: Allow any authenticated user to see the list of players.
    // - Read: Allow any authenticated user to read individual registrations.
    // - Create: Allow any authenticated user to create a registration.
    // - Delete: Allow a user to delete their own registration.
    match /findATeamRegistrations/{regId} {
      allow list, read: if request.auth.uid != null;
      allow create: if request.auth.uid != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth.uid == resource.data.userId;
    }

    // --- Settings Collection ---
    // - Read: Allow anyone to read settings documents (e.g., logo, background).
    // - Write: Only allow admins to write to settings.
    match /settings/{docId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
