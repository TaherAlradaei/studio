rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Users Collection ---
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- Bookings Collection ---
    match /bookings/{bookingId} {
      // Any authenticated user can check if a slot is booked.
      allow read: if request.auth != null;

      // Regular users can only list their own bookings. Admins can list all.
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true || request.query.where.field == "userId" && request.query.where.value == request.auth.uid;
      
      // A user can only create a booking with their own UID,
      // while an admin can create one for anyone.
      allow create: if request.auth.uid != null
        && (request.auth.uid == request.resource.data.userId
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);

      // User who owns the booking or an admin can update/delete it.
      allow update, delete: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // --- Academy Registrations Collection ---
    match /academyRegistrations/{regId} {
      // THIS IS THE FIX: Admins are now allowed to list all registrations.
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow read: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow create: if request.auth.uid != null;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // --- Find a Team Registrations Collection ---
    match /findATeamRegistrations/{regId} {
      allow list, read: if request.auth.uid != null;
      allow create: if request.auth.uid != null && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth.uid == resource.data.userId;
    }
    
    // --- News Collection ---
    match /news/{articleId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- Settings Collection ---
    match /settings/{docId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
