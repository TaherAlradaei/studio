
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- Public Read Access ---
    // Allow anyone to read images from the 'public' folder and its subdirectories.
    // This is necessary for the website to display logos, news images, gallery, etc.
    match /public/{allPaths=**} {
      allow read: if true;
    }

    // --- Admin Write Access ---
    // Only authenticated users who are admins can upload, update, or delete files
    // in the 'public' folder. This secures your site's content.
    match /public/{allPaths=**} {
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }
    
    // --- Academy Member Posts Write Access ---
    // Allow any authenticated user to upload to the posts directory,
    // as long as they are uploading into a folder that matches their own UID.
    // This prevents one member from uploading images to another member's folder.
    match /public/posts/{memberId}/{allPaths=**} {
        allow write: if request.auth != null;
    }
  }
}
