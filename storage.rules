
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to write to specific folders
    match /public/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Looser rules for posts, any authenticated user can post to their member folder
    // This assumes the memberId is validated in security rules for firestore
    match /public/posts/{memberId}/{allPaths=**} {
      allow write: if request.auth != null;
    }

    match /public/logo/{allPaths=**} {
        allow write: if request.auth != null;
    }

    match /public/backgrounds/{allPaths=**} {
        allow write: if request.auth != null;
    }

     match /public/welcome/{allPaths=**} {
        allow write: if request.auth != null;
    }

     match /public/gallery/{allPaths=**} {
        allow write: if request.auth != null;
    }
  }
}
